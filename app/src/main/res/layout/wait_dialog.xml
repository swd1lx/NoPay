<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#11ffffff">

    <RelativeLayout
        android:background="@drawable/wait_dialog_bg"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/iv_wait"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:textColor="#38ADFF"
            android:layout_marginTop="41dp"
            android:background="@drawable/wait_logo"
            android:textSize="16sp" />

        <TextView
            android:layout_below="@+id/iv_wait"
            android:id="@+id/message"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/dialog_text_white"
            android:text="微信支付" />


        <ImageView
            android:id="@+id/iv_wait_progress"
            android:layout_below="@+id/message"
            android:layout_width="39dp"
            android:layout_height="9dp"
            android:layout_marginTop="18dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/dialog_progress1">
        </ImageView>
    </RelativeLayout>

</RelativeLayout>
